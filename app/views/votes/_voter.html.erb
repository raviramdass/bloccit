<% if policy(Vote.new).create? %>
<%= content_tag :div, class: "pull-left vote-arrows", id: "vote-arrows-#{post.id}" do %>
    <div>
      <%= link_to " ", post_up_vote_path(post), class: up_vote_link_classes(post), method: :post %>
    </div>
    <div>
      <strong><%= post.points %></strong>
    </div>
    <div>
      <%= link_to " ", post_down_vote_path(post), class: down_vote_link_classes(post), method: :post %>
    </div>
<% end %>
<% end %>